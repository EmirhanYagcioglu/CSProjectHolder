<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Alicisindan" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">          @color/color_bright     </item>
        <item name="colorPrimaryVariant">   @color/color_dark       </item>
        <item name="colorOnPrimary">        @color/color_brightest  </item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">        @color/color_bright         </item>
        <item name="colorSecondaryVariant"> @color/color_dark         </item>
        <item name="colorOnSecondary">      @color/color_brightest  </item>
        <!-- Status bar settings. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant   </item>
        <item name="android:actionBarSize"> 50dp                        </item>
        <!-- Customize your theme here. -->
    </style>
    <!-- Entry/Login theme. -->
    <style name="Theme.Login" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">          @color/color_bright     </item>
        <item name="colorPrimaryVariant">   @color/color_dark       </item>
        <item name="colorOnPrimary">        @color/color_brightest  </item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">        @color/color_bright         </item>
        <item name="colorSecondaryVariant"> @color/color_dark         </item>
        <item name="colorOnSecondary">      @color/color_brightest  </item>
        <!-- Customize your theme here. -->
    </style>
</resources>